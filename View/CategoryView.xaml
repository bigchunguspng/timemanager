<Page x:Class="TimeManager.View.CategoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Category">

    <!--<Page.DataContext>
        <vm:CategoryViewModel/>
    </Page.DataContext>-->

    <Grid>
        <ListView
            ItemsSource="{Binding SelectedCategory.TaskLists}"
            SelectedItem="{Binding SelectedCategory.SelectedTaskList, Mode=TwoWay}"
            BorderThickness="0"
            ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBox
                            Text="{Binding Name}"
                            MinWidth="100"
                            BorderThickness="0"
                            Background="Transparent" />
                        <ListView
                            ItemsSource="{Binding Tasks}"
                            SelectedItem="{Binding SelectedTask}"
                            BorderThickness="0"
                            Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="250" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Content="{Binding ButtonContent, UpdateSourceTrigger=PropertyChanged}"
                                            Width="20"
                                            Command="{Binding ChangeTaskStatus}" />
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding Description}"
                                                 TextWrapping="Wrap" />
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding TimeInfo}"
                                                   MinWidth="40"
                                                   Margin="1,1,0,0"
                                                   ToolTip="{Binding ToolTipText}" />
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Clear" Command="{Binding ClearTask}" />
                                                <MenuItem Header="Set deadline">
                                                    <StackPanel Orientation="Horizontal" Width="Auto">
                                                        <DatePicker
                                                            SelectedDate="{Binding NewDeadline}"
                                                            BorderThickness="0" />
                                                        <Button
                                                            Content="Set"
                                                            Command="{Binding SetDeadline}"
                                                            Width="45" />
                                                    </StackPanel>
                                                </MenuItem>
                                                <MenuItem Header="Clear deadline" Command="{Binding ClearDeadline}" />
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.InputBindings>
                                <KeyBinding
                                    Key="Delete" Command="{Binding RemoveTask}" />
                            </ListView.InputBindings>
                        </ListView>
                        <StackPanel Orientation="Horizontal">
                            <TextBox
                                Text="{Binding NewTaskDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Left"
                                Margin="26,1,0,0"
                                Width="250">
                                <TextBox.InputBindings>
                                    <KeyBinding
                                        Key="Enter" Command="{Binding AddTask}" />
                                </TextBox.InputBindings>
                            </TextBox>
                            <DatePicker
                                SelectedDate="{Binding NewTaskDeadline, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Width="95"
                                Margin="3,1,0,0"
                                BorderThickness="0" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New list" Command="{Binding NewList }" />
                    <MenuItem Header="Remove" Command="{Binding RemoveList}" />
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
    </Grid>
</Page>