<Window x:Class="TimeManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManager"
        xmlns:vm="clr-namespace:TimeManager.ViewModel"
        mc:Ignorable="d"
        Title="TimeManager"
        Height="350"
        Width="525">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <ListBox
            ItemsSource="{Binding Path=Categories}"
            SelectedItem="{Binding Path=SelectedCategory, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!--<TextBlock 
                            Text="{Binding Name}" 
                            FontSize="18" 
                            Margin="0, 5,0,5" >
                        </TextBlock>-->
                        <TextBox 
                            Text="{Binding Name}" 
                            FontSize="18" 
                            Margin="0, 5,0,5"
                            BorderThickness="0" >
                        </TextBox>
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <!--<MenuItem Header="Rename" />-->
                                <MenuItem Header="Remove" />
                            </ContextMenu>
                        </Grid.ContextMenu>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New category" Command="{Binding NewCategory}"/>
                    <MenuItem Header="Remove" Command="{Binding RemoveCategory}"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        
        <ItemsControl 
            Grid.Column="1" 
            ItemsSource="{Binding SelectedCategory.TaskLists}"
            MinWidth="200"
            MinHeight="200">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBox 
                            Text="{Binding 
                            Path=Name}" 
                            MinWidth="100"
                            BorderThickness="0" />
                        <DataGrid ItemsSource="{Binding Tasks}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Binding="{Binding Finished}"></DataGridCheckBoxColumn>
                                <DataGridTextColumn Binding="{Binding Description}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!--<ListView ItemsSource="{Binding Tasks}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Description}"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>-->
                        <!--<ListBox ItemsSource="{Binding Tasks}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Path=Description}"></TextBox>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>-->
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="New list" Command="{Binding NewList }"/>
                    <MenuItem Header="Remove" />
                </ContextMenu>
            </ItemsControl.ContextMenu>
        </ItemsControl>
        
    </Grid>
</Window>